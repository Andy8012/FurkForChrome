{
  "manifest_version": 2,
  "name": "Furk For Google Chrome™ [beta]",
  "version": "1.3",
  "description": "furk.net productivity extension for the Google Chrome™ web browser.",
  "icons": {
        "16":  "images/icon16.png",
        "48":  "images/icon48.png",
        "128": "images/icon128.png"
  },
  "permissions": [
    "contextMenus",	"notifications", "tabs", "webRequest", "webNavigation",
    "http://api.furk.net/",
	"https://www.furk.net/",
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
	"page": "background.html"
  },
  "options_page": "options.html"
}
