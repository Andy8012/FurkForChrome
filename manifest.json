{
  "name": "Furk For Google Chrome™ [beta]",
  "version": "1.2",
  "description": "furk.net productivity extension for the Google Chrome™ web browser.",
  "icons": {
        "16":  "images/icon16.png",
        "48":  "images/icon48.png",
        "128": "images/icon128.png"
  },
  "permissions": [
    "contextMenus",	"notifications", "tabs", 
    "http://api.furk.net/",
    "http://*/*", 
    "https://*/*"
  ],
  "background_page": "background.html",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/icon16.png",
    "default_title": "Furk for Chrome",
    "default_popup": "panel.html"
    }
}
